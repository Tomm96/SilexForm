{% extends 'base.html.twig' %}
{% block body %}
    <h1>
        Duomenų peržiūra <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    </h1>


    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Vardas</th>
                <th>Pavardė</th>
                <th>El. paštas</th>
                <th>Telefono numeris</th>
                <th>Komentaras</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.first_name }}</td>
                    <td>{{ user.last_name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phone_number }}</td>
                    <td>{{ user.comment }}</td>
                    <td><a href="/edit/{{ user.id }}" class="btn btn-primary">Keisti</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}